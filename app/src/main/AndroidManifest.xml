<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.takusan23.kaisendon">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Preference_ApplicationContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Home"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity> <!-- 明示的ブロードキャストする時 -->
        <receiver android:name=".BroadcastRecever_Notification_Button" />
        <receiver android:name=".BroadcastReciver_Widget_ToastTimeline" />
        <receiver android:name=".BroadcastReceiver_Notification_Timeline" />
        <!-- なうぷれいんぐのサービス登録 -->
        <service
            android:name=".Kaisendon_NowPlaying_Service"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <!--トゥート画面-->
        <activity android:name=".TootSnackberActivity"
            android:theme="@style/Theme.TranslucentBackground">
            <!--共有受け取る-->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>


        <activity
            android:name=".LoginActivity"
            android:label="@string/login_nemu"
            android:parentActivityName=".Home">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />
        </activity>
        <activity
            android:name=".TootActivity"
            android:label="@string/toot"
            android:parentActivityName=".Home">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />

            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PublicTimeLine"
            android:configChanges="orientation|screenSize"
            android:label="@string/public_time_line"
            android:parentActivityName=".Home">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/setting"
            android:parentActivityName=".Home">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />
        </activity>
        <activity
            android:name=".NotificationsActivity"
            android:label="@string/notifications"
            android:parentActivityName=".Home">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />
        </activity>
        <activity android:name=".UserActivity" />
        <activity
            android:name=".AccountActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/public_time_line"
            android:parentActivityName=".Home">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />
        </activity>
        <activity
            android:name=".UserFollowActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/user"
            android:parentActivityName=".Home">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />
        </activity>
        <activity android:name=".MultiPainActivity" />
        <!--
                <activity
                    android:name=".ScrollingUser"
                    android:label="@string/title_activity_scrolling_user"
                    android:theme="@style/AppTheme.NoActionBar">
                    <meta-data
                        android:name="android.support.PARENT_ACTIVITY"
                        android:value=".Home" />
                </activity>
        -->
        <receiver android:name=".NewAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <!-- クリックした際のアクションを設定しておく -->
                <action android:name="kaisendon.widget.Public" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/new_app_widget_info" />
        </receiver>

        <service
            android:name=".WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name=".AccountInfoUpdateActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_account_info_update"
            android:parentActivityName=".UserActivity" />
        <activity
            android:name=".KonoAppNiTuite"
            android:parentActivityName=".Home"></activity>
    </application>

</manifest>