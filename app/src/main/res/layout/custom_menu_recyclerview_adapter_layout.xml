<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/custom_menu_adapter_mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/custom_menu_adapter_main_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/custom_menu_adapter_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/custom_menu_adapter_via"
                        android:layout_width="match_parent"
                        android:textSize="10dp"
                        android:drawableStart="@drawable/ic_devices_black_24dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/custom_menu_adapter_createAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text=""
                        android:drawableStart="@drawable/ic_today_black_24dp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/custom_menu_adapter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"

                android:paddingRight="10dp">


                <TextView
                    android:id="@+id/custom_menu_adapter_boost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_repeat_black_24dp"
                    android:text=""
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/custom_menu_adapter_favourite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_star_black_24dp"
                    android:text=""
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/custom_menu_adapter_bookmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_book_black_24dp"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>