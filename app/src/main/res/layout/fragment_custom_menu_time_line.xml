<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_menu_parent_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomMenu.CustomMenuTimeLine">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/custom_tl_background_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_adb_black_24dp" />

        <LinearLayout
            android:id="@+id/custom_menu_fragment_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/custom_menu_swipe_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/custom_menu_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollingCache="false" />

            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>