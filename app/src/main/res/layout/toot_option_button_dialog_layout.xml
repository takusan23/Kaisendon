<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toot_option_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toot_option_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawableStart="@drawable/ic_person_black_24dp_2"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/account" />

        <TextView
            android:id="@+id/toot_option_bookmark_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawableStart="@drawable/ic_book_black_24dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/bookmark" />

        <TextView
            android:id="@+id/toot_option_copy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawableStart="@drawable/ic_content_paste_black_24dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/copy" />

        <TextView
            android:id="@+id/toot_option_toot_id_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawableStart="@drawable/ic_content_paste_black_24dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/copy_toot_id" />

        <TextView
            android:id="@+id/toot_option_browser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawableStart="@drawable/ic_open_in_browser_black_24dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/open_browser" />

        <TextView
            android:id="@+id/lockback_timeline_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawableStart="@drawable/ic_history_black_24dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/lockback_timeline" />


    </LinearLayout>

</LinearLayout>
