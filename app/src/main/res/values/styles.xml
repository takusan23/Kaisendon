<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:tint">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--あくしょんばー-->
    <style name="toolber_color" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">#ffffff</item>
    </style>

    <!--ダークテーマ　ホーム以外-->

    <style name="OLED_Theme" parent="Theme.AppCompat">
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:tint">#ffffff</item>
    </style>

    <style name="OLED.ActionBer" parent="Theme.AppCompat">
        <item name="android:colorBackground">#000000</item>
        <item name="android:tint">#ffffff</item>
    </style>

    <!--ダークテーマ　ステータスバーを透明に-->

    <style name="DayNightNoActionBarClearStatusBer" parent="Theme.AppCompat.NoActionBar"></style>

    <!--TootSnackberActivity用　半透明Activity-->
    <!-- 半透明背景設定 -->
    <drawable name="transparameter">#7f000000</drawable>

    <style name="Theme.TranslucentBackground" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/transparameter</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="EditTextHint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="CustomSnackbarMessage" parent="TextAppearance.Design.Snackbar.Message">
        <item name="android:textColor">#f0f0f0</item>
    </style>

</resources>
