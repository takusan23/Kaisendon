<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:tint">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--あくしょんばー-->
    <style name="toolber_color" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">#ffffff</item>
    </style>

    <!--ダークテーマ　ホーム以外-->

    <style name="OLED_Theme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:tint">#ffffff</item>
        <item name="android:navigationBarColor">@color/background_material_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="background">@color/black</item>
    </style>

    <style name="OLED.ActionBer" parent="Theme.AppCompat">
        <item name="android:colorBackground">#000000</item>
        <item name="android:tint">#ffffff</item>
    </style>

    <!--ダークテーマ　ステータスバーを透明に-->

    <style name="DayNightNoActionBarClearStatusBer" parent="Theme.AppCompat.NoActionBar"></style>

    <!--TootSnackberActivity用　半透明Activity-->
    <!-- 半透明背景設定 -->
    <drawable name="transparameter">#7f000000</drawable>

    <style name="Theme.TranslucentBackground" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/transparameter</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="EditTextHint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="CustomSnackbarMessage" parent="TextAppearance.Design.Snackbar.Message">
        <item name="android:textColor">#f0f0f0</item>
    </style>

    <style name="Widget.Design.Snackbar" parent="android:Widget">
        <item name="android:minWidth">@dimen/design_snackbar_min_width</item>
        <item name="android:maxWidth">@dimen/design_snackbar_max_width</item>
        <item name="android:paddingLeft">@dimen/design_snackbar_padding_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingRight">@dimen/design_snackbar_padding_horizontal</item>
        <item name="elevation">@dimen/design_snackbar_elevation</item>
        <item name="maxActionInlineWidth">@dimen/design_snackbar_action_inline_max_width</item>
    </style>


    <!--BottomSheetで角を丸くするためのこーど-->
    <!--BottomSheet丸くするやつ。AppTheme用-->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/corner_bottomsheet</item>
    </style>

    <style name="BottomSheetDialogThemeAppTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>


    <!--BottomSheet丸くするやつ。ダークテーマ用-->
    <style name="BottomSheetDark" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/corner_bottomsheet_dark</item>
    </style>

    <style name="BottomSheetDialogThemeDarkTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetDark</item>
    </style>


</resources>
