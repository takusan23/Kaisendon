        <EditTextPreference
            android:defaultValue="#000000"
            android:dependency="pref_fontcolor_setting"
            android:key="pref_fontcolor"
            android:summary="@string/setting_font_color_info"
            android:title="@string/setting_font_color" />

        <EditTextPreference
            android:defaultValue="#000000"
            android:dependency="pref_fontcolor_setting"
            android:key="pref_fontcolor_toot"
            android:summary="@string/setting_font_color_toot_info"
            android:title="@string/setting_font_color_toot" />

        <EditTextPreference
            android:defaultValue="#000000"
            android:dependency="pref_fontcolor_setting"
            android:key="pref_fontcolor_client"
            android:summary="@string/setting_font_color_client_info"
            android:title="@string/setting_font_color_client" />

    </PreferenceCategory>


