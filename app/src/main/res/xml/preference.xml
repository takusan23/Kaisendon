    <!--フォント変更-->

    <PreferenceCategory
        android:key="preference_setting"
        android:title="@string/setting_font">

        <EditTextPreference
            android:defaultValue="18"
            android:key="pref_fontsize_timeline"
            android:summary="@string/setting_fontsize_timeline_info"
