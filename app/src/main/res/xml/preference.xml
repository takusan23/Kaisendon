<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!--設定-->

    <PreferenceCategory
        android:key="preference_setting"
        android:title="@string/setting">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_friends_nico_mode"
            android:summary="@string/setting_friends_nico_mode_info"
            android:title="@string/setting_friends_nico_mode" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_avater"
            android:summary="@string/setting_avater_get_info"
            android:title="@string/setting_avater_get" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_drawer_avater"
            android:summary="@string/setting_drawer_avater_header_hidden_info"
            android:title="@string/setting_drawer_avater_header_hidden" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_toot_media"
            android:summary="@string/setting_toot_media_hidden_info"
            android:title="@string/setting_toot_media_hidden" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_custom_emoji"
            android:summary="@string/setting_cutom_emoji_info"
            android:title="@string/setting_custom_emoji" />

        <CheckBoxPreference
            android:layout_height="wrap_content"
            android:defaultValue="true"
            android:key="pref_avater_wifi"
            android:summary="@string/setting_avater_wifi_get_info"
            android:title="@string/setting_avater_wifi_get" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_avater_gif"
            android:summary="@string/setting_avater_gif_info"
            android:title="@string/setting_avater_gif" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_chrome_custom_tabs"
            android:summary="@string/setting_chrome_custom_tabs_info"
            android:title="@string/setting_chrome_custom_tabs" />

        <ListPreference
            android:defaultValue="HomeCard"
            android:entries="@array/start_fragment_list"
            android:entryValues="@array/start_fragment_values"
            android:key="pref_startFragment"
            android:summary="@string/setting_start_fragment_info"
            android:title="@string/setting_start_fragment" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_networkchange"
            android:summary="@string/setting_networkchange_info"
            android:title="@string/setting_networkchange" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_subtitle_show"
            android:summary="@string/setting_subTitle_show_info"
            android:title="@string/setting_subTitle_show" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_svg_animation"
            android:summary="@string/setting_svg_animation_message"
            android:title="@string/setting_svg_animation_title" />

        <ListPreference
            android:defaultValue="Home"
            android:entries="@array/notification_timeline_list"
            android:entryValues="@array/notification_timeline_values"
            android:key="pref_notification_timeline"
            android:summary="@string/setting_notification_timeline_message"
            android:title="@string/setting_notification_timeline_title" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_no_sleep"
            android:summary="@string/setting_no_sleep_info"
            android:title="@string/setting_no_sleep" />

    </PreferenceCategory>


    <!--通知設定-->

    <PreferenceCategory
        android:key="preference_setting"
        android:title="@string/setting_notification_tile">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_notification_toast"
            android:summary="@string/setting_notification_info"
            android:title="@string/setting_notification" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:dependency="pref_notification_toast"
            android:key="pref_notification_vibrate"
            android:summary="@string/setting_notification_vibrate_info"
            android:title="@string/setting_notification_vibrate" />

    </PreferenceCategory>


    <!--て～～ま設定-->

    <PreferenceCategory
        android:key="preference_setting"
        android:title="@string/setting_app_theme">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_dark_theme"
            android:summary="@string/setting_app_theme_dark_theme_info"
            android:title="@string/setting_app_theme_dark_theme" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:dependency="pref_dark_theme"
            android:key="pref_oled_mode"
            android:summary="@string/setting_app_theme_oled_theme_info"
            android:title="@string/setting_app_theme_oled_theme" />

    </PreferenceCategory>


    <!--ウィジェット設定-->
    <PreferenceCategory
        android:key="preference_setting"
        android:title="@string/widget_setting">

        <ListPreference
            android:defaultValue="Home"
            android:entries="@array/widget_list"
            android:entryValues="@array/widget_values"
            android:key="WidgetTLType"
            android:summary="@string/setting_widget_load_title"
            android:title="@string/setting_widget_load_message" />

    </PreferenceCategory>


    <!--ダイアログを出すかどうか-->

    <PreferenceCategory
        android:key="preference_setting"
