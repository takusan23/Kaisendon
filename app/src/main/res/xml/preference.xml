        <EditTextPreference
            android:defaultValue="18"
            android:key="pref_fontsize_client"
            android:summary="@string/setting_fontsize_client_info"
            android:title="@string/setting_fontsize_client" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_fontcolor_setting"
