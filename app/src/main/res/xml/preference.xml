        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_one_hand_mode"
            android:summary="@string/setting_one_hand_mode_message"
            android:title="@string/setting_one_hand_mode_title" />

    </PreferenceCategory>


    <!--タイムライン設定-->

    <PreferenceCategory
        android:key="preference_setting"
        android:title="@string/setting_timeline">

        <CheckBoxPreference
