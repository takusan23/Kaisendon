        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_nicoru_dialog"
            android:summary="@string/setting_nicoru_dialog_info"
            android:title="@string/setting_nicoru_dialog" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_boost_dialog"
            android:summary="@string/setting_boost_dialog_info"
            android:title="@string/setting_boost_dialog" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_bookmark_dialog"
            android:summary="@string/setting_bookmark_dialog_info"
            android:title="@string/setting_bookmark_dialog" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_follow_dialog"
            android:summary="@string/setting_follow_dialog_info"
            android:title="@string/setting_follow_dialog" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_enquete_dialog"
            android:summary="@string/setting_enquate_info"
