            android:summary="@string/setting_toot_dialog_info"
            android:title="@string/setting_toot_dialog" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_timeline_toot_dialog"
            android:summary="@string/setting_timeline_toot_dialog_info"
